{
    "editor.fontFamily": "'JetBrains Mono', 'Iosevka', '霞鹜文楷等宽','等距更纱黑体 SC', Consolas, 'Courier New', monospace",
    "editor.rulers": [
        120
    ],
    "gitlens.currentLine.format": "${author}, ${date} • ${message}",
    "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
    "gitlens.views.repositories.files.layout": "list",
    "editor.fontWeight": "500",
    "editor.minimap.maxColumn": 250,
    "editor.renderWhitespace": "trailing",
    "files.eol": "\n",
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "window.zoomLevel": 0,
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "classic",
    "workbench.statusBar.visible": true,
    "editor.wordWrapColumn": 120,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    "gitlens.advanced.blame.delayAfterEdit": 10000,
    "gitlens.advanced.maxListItems": 20,
    "debug.javascript.autoAttachFilter": "disabled",
    "debug.allowBreakpointsEverywhere": true,
    "files.watcherExclude": {
        "**/dist/*/**": true
    },
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    "[typescript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.stylelint": false
        },
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.stylelint": false
        }
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.stylelint": false
        }
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.stylelint": false
        }
    },
    "eslint.codeActionsOnSave.mode": "problems",
    "editor.formatOnSave": true,
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.tsserver.log": "off",
    "javascript.format.semicolons": "insert",
    "editor.largeFileOptimizations": false,
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "gitlens.hovers.avatars": false,
    "editor.fontLigatures": true,
    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "vetur.validation.template": false,
    // "vetur.validation.script": false,
    "vetur.validation.style": false,
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "vetur.format.defaultFormatter.ts": "vscode-typescript",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "vetur.format.options.tabSize": 4,
    "vetur.format.defaultFormatterOptions": {
        "prettier": {
            "bracketSpacing": false
        },
        "js-beautify-html": {
            "wrap_attributes": "force-expand-multiline"
        },
        "prettyhtml": {
            "printWidth": 120,
            "singleQuote": false,
            "wrapAttributes": false,
            "sortAttributes": false
        }
    },
    "files.associations": {
        "*.vue": "vue"
    },
    "algorithm.lang": "cn",
    "workbench.colorTheme": "GitHub Light",
    "oneDarkPro.italic": false,
    "vscode-edge-devtools.themes": "Dark",
    "vscode-edge-devtools.mirrorEdits": true,
    "editor.guides.bracketPairs": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontSize": 16,
    "editor.suggestSelection": "first"
}
